<UserControl x:Class="TrayTool.UIControlls.UCDirectory"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="666">
    <Grid>
        <Label Content="Directory" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <TextBox HorizontalContentAlignment="Stretch" Height="23" Margin="74,10,10,0" TextWrapping="Wrap" Text="{Binding Name}" VerticalAlignment="Top"/>
    </Grid>
</UserControl>
